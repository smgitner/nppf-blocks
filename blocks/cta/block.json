{
  "apiVersion": 3,
  "name": "nppf-blocks/cta",
  "title": "Call to Action",
  "category": "nppf-blocks",
  "icon": "megaphone",
  "description": "Call to action section with button",
  "supports": {
    "align": ["wide", "full"]
  },
  "align": "full",
  "attributes": {
    "heading": {
      "type": "string",
      "default": "Make a lasting impact. Become a donor today."
    },
    "subtitle": {
      "type": "string",
      "default": ""
    },
    "buttonText": {
      "type": "string",
      "default": "DONATE"
    },
    "buttonUrl": {
      "type": "string",
      "default": "#donate"
    },
    "buttonLink": {
      "type": "object",
      "default": {
        "url": "",
        "opensInNewTab": false,
        "title": ""
      }
    },
    "buttonLinkType": {
      "type": "string",
      "default": "url",
      "enum": ["url", "page", "post", "recipient"]
    },
    "buttonLinkPage": {
      "type": "number",
      "default": 0
    },
    "buttonLinkPost": {
      "type": "number",
      "default": 0
    },
    "buttonLinkRecipient": {
      "type": "number",
      "default": 0
    }
  },
  "textdomain": "nppf-blocks",
  "editorScript": "file:./editor.js",
  "style": "file:./style.css",
  "render": "file:./render.php"
}